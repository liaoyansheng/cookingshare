/* pages/Cookinglist/Cookinglist.wxss */
.searchView{
  position: fixed;
  top:0rpx;
  /* background-color: #FF6347; */
  width:750rpx;
  height:108rpx;
  padding:1rpx;
  /* border:1rpx solid #F2F2F2; */
  z-index: 999;
  background-color:#FFF;
}
.searchView_copy{
  width:750rpx;
  height:108rpx;
}
.search{
  display: flex;
  flex-direction: row;
  align-items:center;
  width: 642rpx;
  height:60rpx;
  /* background: #FFFF; */
  background-color: #FFFFFF;
  /* border-radius:30rpx; */
  margin:24rpx;
  padding:0rpx 30rpx; 
  border-bottom:1rpx solid #F2F2F2;
}
.searchinput{
  width: 550rpx;
  height:50rpx;
  font-size:30rpx;
  margin-left:20rpx;
}
.search_more{
  width: 750rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom:2rpx solid #F2F2F2;
  position:fixed;
  background-color:#FFF;
}
.search_more1{
  width: 750rpx;
  height: 70rpx;
}
.search_more_check{
  width: 250rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999999;
}
.flex-row{
  padding: 32rpx;
  border-bottom:4rpx solid #F2F2F2;
}
.flex-column{
  width: 406rpx;
  height: 200rpx;
}
.cook_img{
  width: 270rpx;
  height: 200rpx;
  margin-right:10px;
}
.cook_name{
  font-size: 38rpx;
  font-weight: 600;
}
.cook_method{
  font-size: 30rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
}
.cook_people{
  font-size: 24rpx;
  color: #C0C0C0;
}
.cook_msg{
  font-size: 26rpx;
}